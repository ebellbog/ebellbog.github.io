<div class="timeline-item shaded-blur">
    <div class="item-header">
        {{#if endDate}}
            <div class="daterange small-text">
                {{#if startDate}}
                    <strong>{{startDate}}</strong>
                    &nbsp;&ndash;&nbsp;
                {{/if}}
                <strong>{{{endDate}}}</strong>
            </div>
        {{/if}}
    </div>
    <article class="item-body">
        <header>
            <h3 class="organization">
                {{#if orgUrl }}
                    <a href="{{orgUrl}}" target="_blank">{{{organization}}}</a>
                {{else}}
                    <span>{{{organization}}}</span>
                {{/if}}
            </h3>
            <div class="title">{{title}}</div>
            <div class="location small-text">{{location}}</div>
        </header>
        <p class="description no-scrollbar">{{{description}}}</p>
        <footer class="badge-container">
            {{#each skills}}<span class="badge small-text {{formatSkillColor this}}">{{this}}</span>{{/each}}
        </footer>
    </article>
</div>